[user]
  name = Terry Ma
  email = zhenchuan.ma@gmail.com
[core]
  excludesfile = /Users/terryma/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
  d = difftool
  lg = log --abbrev-commit --decorate --pretty=oneline
[difftool]
  prompt = false
[color]
  ui = auto
[diff]
  tool = p4diff
  external = vimdiff-git
[difftool "p4diff"]
  cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$LOCAL\" \"$REMOTE\" > /dev/null 2>&1
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false
[pager]
  diff = 
	log = false
[merge]
  keepBackup = false
  tool = p4merge
[mergetool "p4merge"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$PWD/$BASE" "$PWD/$REMOTE" "$PWD/$LOCAL" "$PWD/$MERGED"
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false
